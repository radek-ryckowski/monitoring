{
  "name": "monitoring",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "bin": {
    "monitoring": "bin/monitoring.js"
  },
  "scripts": {
    "clean": "find . -name '*.js' -not -path '*/node_modules/*' -not -name 'jest.config.js' -delete && find . -name '*.d.ts' -not -path '*/node_modules/*' -delete && find . -name '*.js.map' -not -path '*/node_modules/*' -delete && rm -rf cdk.out .cdk.staging",
    "build": "npm run build -w @monitoring/cdk-cloudwatch-observability && npm run build -w @monitoring/cdk-auto-monitoring && tsc",
    "build:packages": "npm run build -w @monitoring/cdk-cloudwatch-observability && npm run build -w @monitoring/cdk-auto-monitoring",
    "rebuild": "npm run clean && npm run build",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "aws-cdk": "2.1029.4",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "@monitoring/cdk-auto-monitoring": "^1.0.0",
    "@monitoring/cdk-cloudwatch-observability": "^1.0.0",
    "aws-cdk-lib": "2.215.0",
    "constructs": "^10.0.0"
  }
}
