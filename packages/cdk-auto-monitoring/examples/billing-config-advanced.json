{
  "enabled": true,
  "dashboardName": "AdvancedBillingDashboard",
  "enableAnomalyDetection": true,
  "enableForecasting": true,
  "forecastDays": 60,
  "trackedServices": [
    "AmazonEC2",
    "AWSLambda",
    "AmazonRDS",
    "AmazonDynamoDB",
    "AmazonS3",
    "AmazonECS",
    "AmazonCloudWatch"
  ],
  "costAllocationTags": ["Environment", "Team", "Project"],
  "budgets": [
    {
      "name": "TotalMonthlyBudget",
      "amount": 5000,
      "timeUnit": "MONTHLY",
      "thresholds": [50, 75, 90, 100],
      "notificationEmails": ["finance@example.com", "devops@example.com"],
      "snsTopicArn": "arn:aws:sns:us-east-1:123456789012:billing-alerts"
    },
    {
      "name": "EC2Budget",
      "amount": 2000,
      "timeUnit": "MONTHLY",
      "thresholds": [80, 100],
      "notificationEmails": ["devops@example.com"],
      "filters": {
        "services": ["AmazonEC2", "AmazonEBS"],
        "tags": {
          "Environment": "Production"
        }
      }
    },
    {
      "name": "LambdaBudget",
      "amount": 500,
      "timeUnit": "MONTHLY",
      "thresholds": [80, 100],
      "notificationEmails": ["serverless-team@example.com"],
      "filters": {
        "services": ["AWSLambda"]
      }
    },
    {
      "name": "DatabaseBudget",
      "amount": 1500,
      "timeUnit": "MONTHLY",
      "thresholds": [85, 100],
      "notificationEmails": ["database-team@example.com"],
      "filters": {
        "services": ["AmazonRDS", "AmazonDynamoDB"]
      }
    },
    {
      "name": "DailyBudget",
      "amount": 200,
      "timeUnit": "DAILY",
      "thresholds": [90, 100],
      "notificationEmails": ["ops-oncall@example.com"],
      "snsTopicArn": "arn:aws:sns:us-east-1:123456789012:daily-cost-alerts"
    }
  ]
}
